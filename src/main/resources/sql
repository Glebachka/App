CREATE TABLE USER(
  userid BIGINT NOT NULL auto_increment,
  username VARCHAR(50) NOT NULL,
  userssn VARCHAR(30) NOT NULL UNIQUE,
  userpassword VARCHAR(30) NOT NULL ,
  PRIMARY KEY (userid)
);

CREATE TABLE USERROLE(
  id BIGINT NOT NULL AUTO_INCREMENT,
  role VARCHAR(30) NOT NULL ,
  PRIMARY KEY (id),
  UNIQUE (role)
);

CREATE TABLE APP_USER_USER_ROLE (
  userid BIGINT NOT NULL ,
  id BIGINT NOT NULL ,
  CONSTRAINT fk_UserId  FOREIGN KEY (`userid`) REFERENCES USER(`userid`) ON DELETE CASCADE ON UPDATE CASCADE,
  CONSTRAINT fk_RoleId FOREIGN KEY (`id`) REFERENCES USERROLE(`id`) ON DELETE CASCADE ON UPDATE CASCADE);