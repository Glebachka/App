CREATE TABLE USER(
  userid BIGINT NOT NULL auto_increment,
  username VARCHAR(50) NOT NULL,
  userssn VARCHAR(30) NOT NULL UNIQUE,
  userpassword VARCHAR(30) NOT NULL ,
  PRIMARY KEY (userid)
);

CREATE TABLE USERROLE(
  id BIGINT NOT NULL AUTO_INCREMENT,
  role VARCHAR(30) NOT NULL ,
  PRIMARY KEY (id),
  UNIQUE (role)
);

CREATE TABLE APP_USER_USER_ROLE (
  userid BIGINT NOT NULL ,
  id BIGINT NOT NULL ,
  CONSTRAINT fk_UserId  FOREIGN KEY (`userid`) REFERENCES USER(`userid`) ON DELETE CASCADE ON UPDATE CASCADE,
  CONSTRAINT fk_RoleId FOREIGN KEY (`id`) REFERENCES USERROLE(`id`) ON DELETE CASCADE ON UPDATE CASCADE);

CREATE TABLE PHOTO(
  photo_id BIGINT NOT NULL AUTO_INCREMENT,
  user_id BIGINT NOT NULL ,
  photo_paths VARCHAR(100) NOT NULL ,
  photo_name VARCHAR(50),
  photo_description VARCHAR(200),
  photo_avatar BOOLEAN,
  PRIMARY KEY (photo_id),
  CONSTRAINT fk_user_id FOREIGN KEY (`user_id`) REFERENCES USER(`userid`) ON DELETE CASCADE ON UPDATE CASCADE);

CREATE TABLE LINK (
      LINK_ID BIGINT NOT NULL AUTO_INCREMENT,
      USER_ID BIGINT NOT NULL ,
      LINK VARCHAR(50),
      DESCRIPTION VARCHAR(200),
      PRIMARY KEY (LINK_ID),
      CONSTRAINT fk_UserId_link FOREIGN KEY (USER_ID) REFERENCES USER(`userid`)  ON DELETE CASCADE ON UPDATE CASCADE
    );
